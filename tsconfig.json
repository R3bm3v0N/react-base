{
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
